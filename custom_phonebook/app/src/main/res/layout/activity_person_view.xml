<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alper_arik.quiz.RegisterActivity"
    android:background="#060075">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Name"
        android:ems="10"
        android:id="@+id/nameField"
        android:textColor="#FF5B33"
        android:textSize="13sp"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/homePhoneField"
        android:layout_alignStart="@+id/homePhoneField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Home Phone"
        android:ems="10"
        android:id="@+id/homePhoneField"
        android:textColor="#FF5B33"
        android:inputType="phone"
        android:textSize="13sp"
        android:layout_below="@+id/nameField"
        android:layout_alignLeft="@+id/mobilePhoneField"
        android:layout_alignStart="@+id/mobilePhoneField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Mobile Phone"
        android:ems="10"
        android:id="@+id/mobilePhoneField"
        android:textColor="#FF5B33"
        android:inputType="phone"
        android:textSize="13sp"
        android:layout_below="@+id/homePhoneField"
        android:layout_alignLeft="@+id/workPhoneField"
        android:layout_alignStart="@+id/workPhoneField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Work Phone"
        android:ems="10"
        android:id="@+id/workPhoneField"
        android:textColor="#FF5B33"
        android:inputType="phone"
        android:textSize="13sp"
        android:layout_below="@+id/mobilePhoneField"
        android:layout_alignLeft="@+id/emailField"
        android:layout_alignStart="@+id/emailField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="E-Mail"
        android:ems="10"
        android:id="@+id/emailField"
        android:textColor="#FF5B33"
        android:inputType="textEmailAddress"
        android:editable="false"
        android:textSize="13sp"
        android:layout_below="@+id/workPhoneField"
        android:layout_toRightOf="@+id/editPersonButton"
        android:layout_toEndOf="@+id/editPersonButton" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/editPersonButton"
        android:background="@drawable/custom_button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deletePersonButton"
        android:background="@drawable/custom_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/emailField"
        android:layout_alignEnd="@+id/emailField"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Name"
        android:id="@+id/textView"
        android:textColor="#94ffe2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Home Phone"
        android:id="@+id/textView2"
        android:textColor="#94ffe2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Mobile Phone"
        android:id="@+id/textView3"
        android:textColor="#94ffe2"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Work Phone"
        android:id="@+id/textView4"
        android:textColor="#94ffe2"
        android:layout_above="@+id/emailField"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="E-Mail"
        android:id="@+id/textView5"
        android:textColor="#94ffe2"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textSize="13sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Log"
        android:id="@+id/callLogButton"
        android:background="@drawable/custom_button"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/emailField"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS LOg"
        android:background="@drawable/custom_button"
        android:id="@+id/smsLogButton"
        android:layout_alignTop="@+id/callLogButton"
        android:layout_alignLeft="@+id/deletePersonButton"
        android:layout_alignStart="@+id/deletePersonButton" />


</RelativeLayout>
